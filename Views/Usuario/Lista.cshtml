@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Listagem dos usuários";
}
<div class="listaUsers" class="listagem">
    <h2>Listagem dos Usuários</h2>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Login</th>
                <th>Senha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Usuario u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Nome</td>
                    <td>@u.Email</td>
                    <td>@u.Login</td>
                    <td>@u.Senha</td>
                </tr>
            }
        </tbody>
    </table>
    <a class="nav-menu" asp-controller="Usuario" asp-action="Menu">Menu</a>
</div>